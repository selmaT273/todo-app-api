{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // compiler will put compiled code here
    "outDir": "dist/js",
    // tells TS to compile all .ts files in the src
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  // tells compiler what to and what not to include files in src
  "include": ["src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}